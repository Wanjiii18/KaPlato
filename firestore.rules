rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read access to all users for karenderias collection
    match /karenderias/{document} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // User profiles - users can read/write their own profile
    // Also allow reading other users for username checking (even unauthenticated for login)
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      allow read: if true; // Allow reading for username checks during login
    }
    
    // Karenderia applications
    match /karenderia_applications/{applicationId} {
      allow read, write: if request.auth != null;
    }
    
    // Public access to other collections (read-only for unauthenticated, write for authenticated)
    match /{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
