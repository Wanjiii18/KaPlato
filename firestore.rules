rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read access to all users for karenderias collection
    match /karenderias/{document} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // User profiles - users can read/write their own profile
    // Also allow reading other users for username checking
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      allow read: if request.auth != null; // Allow reading for username checks
    }
    
    // Karenderia applications
    match /karenderia_applications/{applicationId} {
      allow read, write: if request.auth != null;
    }
    
    // For development: Allow all authenticated users to read/write
    // TODO: Remove this in production and use specific rules above
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
